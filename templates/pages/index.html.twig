{% extends('base.html.twig') %}

{% block title %}Bienvenue sur mon site immobilier{% endblock %}

{% block body %}
    <div class="jumbotron text-center">
        <h1>Bienvenue!</h1>
        <h1>Découvrer le fonctionnement de notre site web ! </h1>
    </div>

    <br /> <br /> <br />

  <div class="container">
  <h2>Les derniers biens</h2>
    {% for singleProperty in properties %}
     <div class="col-3">
        <div class="card">
            <div class="card-body">
            <h5 class="card-title">
             <a href="{{ path('property.show', {id: singleProperty.id, slug: singleProperty.slug}) }}">{{ singleProperty.title }}</a>
            </h5>
                <p class="card-text">{{singleProperty.city}} ({{singleProperty.postalcode}})</p>
                <div class="text-primary"><strong> {{singleProperty.price}} €</strong> </div>
            </div>
        </div>
     </div>

    {% endfor %}
</div>

{% endblock %}