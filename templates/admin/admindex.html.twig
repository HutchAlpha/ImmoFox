{% extends('base.html.twig') %}

{% block title %}Bienvenue sur mon site immobilier (Admin){% endblock %}

{% block body %}
    <div class="jumbotron text-center">
        <h1>Bienvenue!</h1>
        <h1>Découvrer le fonctionnement de notre site web ! </h1>
    </div>

    <br /> <br /> <br />

    {% for message in app.flashes('success') %}
    <div class="alert alert-success">{{message}}</div>
    {% endfor %}

  <table class="table table-striped">
    <thead>
      <tr>
          <th>Titre</th>
          <th>Action</th>
      </tr>
    </thead>
    <tbody>
      {% for property in properties %}
      <tr>
          <td>{{property.id}} - {{property.title}} - {{property.city}}</td>
          <td><a href="{{ path('admin_edit', {id: property.id}) }}" class="btn btn-secondary">Éditer</a>
          <form method="post" action="{{ path('admin_delete', {id: property.id}) }}" style="display: inline-block" onsubmit="return confirm('Êtes-vous vraiment sûr ?')">
          <input type="hidden" name="_method" value="DELETE">
          <button class="btn btn-danger">Supprimer</button>
          </form>
          </td>
      </tr>
    {% endfor %}
    </thead>
    </tbody>
  </table>
<div class="text-right">
<a href="{{ path('admin_new')}}" class="btn btn-primary">Créer un bien</a>
</div>
</div>

{% endblock %}