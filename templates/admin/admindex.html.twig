{% extends('base.html.twig') %}

{% block title %}Bienvenue sur mon site immobilier (Admin){% endblock %}

{% block body %}
    <div class="jumbotron text-center">
        <h1>Bienvenue!</h1>
        <h1>Découvrer le fonctionnement de notre site web ! </h1>
    </div>

    <br /> <br /> <br />

  <table class="table table-striped">
    <thead>
      <tr>
          <th>Titre</th>
          <th>Action</th>
      </tr>
    </thead>
    <tbody>
      {% for property in properties %}
      <tr>
          <td>{{property.id}} - {{property.title}} - {{property.city}}</td>
          <td><a href="{{ path('admin_edit', {id: property.id}) }}" class="btn btn-secondary">Éditer</a></td>
      </tr>
    {% endfor %}
    </thead>
    </tbody>
  </table>
<div class="text-right">
<a href="{{ path('admin_new')}}" class="btn btn-primary">Créer un bien</a>
</div>
</div>

{% endblock %}